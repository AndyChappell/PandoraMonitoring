##############################################################################
# cmake configuration file for Monitoring
#
# requires:
#   MacroCheckPackageLibs.cmake for checking package libraries
#
# returns following variables:
#
#   Monitoring_FOUND      : set to TRUE if Monitoring found
#       if FIND_PACKAGE called with REQUIRED and COMPONENTS arguments
#       Monitoring_FOUND is only set to TRUE if ALL components are also found
#       if REQUIRED is NOT set components may or may not be available
#
#   Monitoring_ROOT       : path to this Monitoring installation
#   Monitoring_VERSION    : package version
#   Monitoring_LIBRARIES  : list of Monitoring libraries (NOT including COMPONENTS)
#   Monitoring_INCLUDE_DIRS  : list of paths to be used with INCLUDE_DIRECTORIES
#   Monitoring_LIBRARY_DIRS  : list of paths to be used with LINK_DIRECTORIES
#   Monitoring_COMPONENT_LIBRARIES      : list of Monitoring component libraries
#   Monitoring_${COMPONENT}_FOUND       : set to TRUE or FALSE for each library
#   Monitoring_${COMPONENT}_LIBRARY     : path to individual libraries
#   Monitoring_${COMPONENT}_LIB_DEPENDS : individual library dependencies
#
# @author Jan Engels, Desy
##############################################################################

SET( Monitoring_ROOT "@CMAKE_INSTALL_PREFIX@" )
SET( Monitoring_VERSION "@Monitoring_VERSION@" )


# ---------- include dirs -----------------------------------------------------
# do not store find results in cache
SET( Monitoring_INCLUDE_DIRS Monitoring_INCLUDE_DIRS-NOTFOUND )
MARK_AS_ADVANCED( Monitoring_INCLUDE_DIRS )

FIND_PATH( Monitoring_INCLUDE_DIRS
	NAMES PandoraMonitoringApi.h
	PATHS ${Monitoring_ROOT}/include
	NO_DEFAULT_PATH
)



# ---------- libraries --------------------------------------------------------
INCLUDE( "@ILCSOFT_CMAKE_MODULES_ROOT@/MacroCheckPackageLibs.cmake" )

# only standard libraries should be passed as arguments to CHECK_PACKAGE_LIBS
# additional components are set by cmake in variable PKG_FIND_COMPONENTS
# first argument should be the package name
CHECK_PACKAGE_LIBS( Monitoring Monitoring )




# ---------- libraries dependencies -------------------------------------------
# this sets Monitoring_${COMPONENT}_LIB_DEPENDS variables
INCLUDE( "${Monitoring_ROOT}/lib/cmake/MonitoringLibDeps.cmake" )
 



# ---------- final checking ---------------------------------------------------
INCLUDE( FindPackageHandleStandardArgs )
# set MONITORINGNEW_FOUND to TRUE if all listed variables are TRUE and not empty
# Monitoring_COMPONENT_VARIABLES will be set if FIND_PACKAGE is called with REQUIRED argument
FIND_PACKAGE_HANDLE_STANDARD_ARGS( Monitoring DEFAULT_MSG Monitoring_ROOT Monitoring_INCLUDE_DIRS Monitoring_LIBRARIES ${Monitoring_COMPONENT_VARIABLES} )

SET( Monitoring_FOUND ${MONITORINGNEW_FOUND} )

